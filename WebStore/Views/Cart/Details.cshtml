@model OrderDetailsViewModel
@{
    ViewBag.Title = "Cart";
}

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">Shopping Cart</li>
            </ol>
        </div>
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                @await Html.PartialAsync("Partial/_CartMenu")
                <tbody>
                    @await Html.PartialAsync("Partial/_ReviewAndPayment", Model.CartViewModel)
                </tbody>
            </table>
        </div>
    </div>
</section> <!--/#cart_items-->

<section id="do_action">
    <div class="container">
        <div class="heading">
            <h3>What would you like to do next?</h3>
            <p>Choose if you have a discount code or reward points you want to use or would like to estimate your delivery cost.</p>
        </div>
        <div class="row">
            <div class="col-sm-6">
                @await Html.PartialAsync("Partial/_ChooseArea")
            </div>
            <div class="col-sm-6">
                <div class="total_area">
                    <ul>
                        <li>Cart Sub Total <span>@Model.CartViewModel.Price.ToString("C")</span></li>
                        <li>Eco Tax <span>@Model.CartViewModel.Tax.ToString("C")</span></li>
                        <li>Shipping Cost <span>Free</span></li>
                        <li>Total <span>@Model.CartViewModel.TotalPrice.ToString("C")</span></li>
                    </ul>
                    <a class="btn btn-default update" href="">Update</a>
                    <a class="btn btn-default check_out" href="">Check Out</a>
                </div>
            </div>
        </div>
    </div>
</section><!--/#do_action-->

